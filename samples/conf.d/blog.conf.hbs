server {
  listen 80 default_server;
  server_name blog.demo;

  root /var/www/blog;
  index index.html;

  location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location / {
   try_files $uri.html $uri $uri/ /index.html;
  }
}
